# Database Configuration
MONGO_URI=mongodb://localhost:27017/nestcms

# Read Replica Configuration (Optional)
# Method 1: Individual replica URIs
MONGO_READ_REPLICA_1=mongodb://replica1:27017/nestcms
MONGO_READ_REPLICA_2=mongodb://replica2:27017/nestcms
MONGO_READ_REPLICA_3=mongodb://replica3:27017/nestcms

# Method 2: Comma-separated list
# MONGO_READ_REPLICAS=mongodb://replica1:27017/nestcms,mongodb://replica2:27017/nestcms

# MongoDB Connection Pool Configuration
MONGO_PRIMARY_POOL_SIZE=10
MONGO_REPLICA_POOL_SIZE=5

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# PayTabs Configuration
PAYTABS_PROFILE_ID=your-profile-id
PAYTABS_SERVER_KEY=your-server-key
PAYTABS_REGION=ARE
PAYTABS_TIMEOUT=30000
PAYTABS_RETRY_ATTEMPTS=3
PAYTABS_RETRY_DELAY=1000
PAYTABS_MAX_RETRY_DELAY=30000
PAYTABS_BACKOFF_MULTIPLIER=2
PAYTABS_RETRY_JITTER=true

# PayTabs Webhook Security Configuration
PAYTABS_WEBHOOK_SECRET=your-webhook-secret-key-256-bits-minimum
PAYTABS_SIGNATURE_HEADER=x-paytabs-signature
PAYTABS_SIGNATURE_ALGORITHM=sha256
PAYTABS_TIMESTAMP_HEADER=x-paytabs-timestamp
PAYTABS_TIMESTAMP_TOLERANCE=300
PAYTABS_IP_WHITELIST=
PAYTABS_REQUIRE_HTTPS=true
PAYTABS_MAX_PAYLOAD_SIZE=1048576

# PayTabs Resilience Configuration
PAYTABS_ERROR_THRESHOLD=50
PAYTABS_CIRCUIT_RESET_TIMEOUT=30000
PAYTABS_MONITORING_PERIOD=60000
PAYTABS_MIN_REQUESTS=10
PAYTABS_FALLBACK_ENABLED=true
PAYTABS_QUEUE_TIMEOUT=300000
PAYTABS_MAX_CONCURRENT=10
PAYTABS_QUEUE_SIZE=100

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
CIRCUIT_BREAKER_ROLLING_TIMEOUT=10000
CIRCUIT_BREAKER_ROLLING_BUCKETS=10

# Webhook Security Configuration
WEBHOOK_SIGNATURE_ALGORITHM=sha256
WEBHOOK_TIMESTAMP_TOLERANCE=300
PAYTABS_IP_WHITELIST=

# Performance Configuration
MAX_AGGREGATION_TIME_MS=30000
DEFAULT_CACHE_TTL=3600
ENABLE_QUERY_LOGGING=false

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Event-Driven Circuit Breaker Configuration
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=80
CIRCUIT_BREAKER_VOLUME_THRESHOLD=20
CIRCUIT_BREAKER_SLOW_CALL_THRESHOLD=10000
CIRCUIT_BREAKER_SLOW_CALL_RATE_THRESHOLD=50
CIRCUIT_BREAKER_ENABLE_EVENTS=true
CIRCUIT_BREAKER_ENABLE_METRICS=true
CIRCUIT_BREAKER_MIN_REQUESTS=10
CIRCUIT_BREAKER_MAX_CONCURRENT=10
CIRCUIT_BREAKER_MONITORING_PERIOD=60000

# Event-Driven Payment Architecture Configuration
EVENT_DRIVEN_PAYMENT_ENABLED=true
EVENT_DRIVEN_PAYMENT_MAX_RETRIES=3
EVENT_DRIVEN_PAYMENT_RETRY_DELAY=1000
EVENT_DRIVEN_PAYMENT_SAGA_TIMEOUT=300000
EVENT_DRIVEN_PAYMENT_EVENT_STORE_ENABLED=true
EVENT_DRIVEN_PAYMENT_PROJECTION_ENABLED=true

# Event Bus Configuration
EVENT_BUS_MAX_LISTENERS=20
EVENT_BUS_WILDCARD_ENABLED=false
EVENT_BUS_DELIMITER=.
EVENT_BUS_VERBOSE_MEMORY_LEAK=false
EVENT_BUS_IGNORE_ERRORS=false

# Event Store Configuration
EVENT_STORE_BATCH_SIZE=100
EVENT_STORE_SNAPSHOT_FREQUENCY=100
EVENT_STORE_CLEANUP_INTERVAL=3600000
EVENT_STORE_MAX_EVENTS_PER_AGGREGATE=10000

# Saga Configuration
SAGA_TIMEOUT=300000
SAGA_MAX_RETRIES=3
SAGA_RETRY_DELAY=5000
SAGA_COMPENSATION_TIMEOUT=60000

# Performance Monitoring
PERFORMANCE_METRICS_ENABLED=true
PERFORMANCE_METRICS_INTERVAL=60000
PERFORMANCE_METRICS_RETENTION=86400000
PERFORMANCE_METRICS_PERCENTILES=50,90,95,99

# Event-Driven Architecture Features
EVENT_SOURCING_ENABLED=true
CQRS_ENABLED=true
SAGA_PATTERN_ENABLED=true
EVENT_REPLAY_ENABLED=true
EVENT_PROJECTION_ENABLED=true
